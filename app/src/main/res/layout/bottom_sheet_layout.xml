<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@drawable/dialog_bg">

        <TextView
            android:id="@+id/username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/primaryText"
            android:textSize="@dimen/_9ssp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/makeGroupAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/add"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:text="@string/make_group_admin"
            android:textAlignment="center"
            />

        <TextView
            android:id="@+id/remove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/remove"
            android:textSize="@dimen/_13ssp"
            android:textStyle="bold"
            android:text="@string/remove_from_group"
            android:textAlignment="center"/>

    </LinearLayout>
    <include layout="@layout/bottom_cancel_layout"
        android:id="@+id/cancelBtn"/>
</LinearLayout>